<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerInside"
                android:background="@android:color/darker_gray"
                android:id="@+id/property_image"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:id="@+id/property_price_text_view"
                android:padding="4dp"
                tools:text="Property Price"/>

            <TextView
                android:id="@+id/property_address_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="4dp"
                tools:text="Property Address"
                android:layout_alignParentRight="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/property_price_text_view"
                android:id="@+id/linear_layout"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/property_heading_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textStyle="bold"
                    tools:text="Property Heading"/>



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/property_description_text_view"
                android:layout_below="@id/linear_layout"
                android:padding="4dp"
                tools:text="Property Description"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/property_date_text_view"
                android:layout_below="@id/property_description_text_view"
                android:padding="4dp"
                tools:text="Property Date"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/property_date_text_view"
            android:id="@+id/check_box"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#c0c0c0"/>

</LinearLayout>
